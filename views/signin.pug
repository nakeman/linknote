extends layout

block content
  #content.main
    .fullscreen.valign-wrapper
      .valign.center-align(style="width: 100%;")
        .center(style="width:30%;margin:auto;")
            a(href='/')
                img#personality.centered-and-cropped(src="/images/pencil.png", alt="linknote", style="width: 250px")
            h3.goodlooking 登录 ｜ Sign In
            .form()
                .form-group
                    label(for='email') Email
                    input#email.form-control(type='email', name='email' placeholder='Email' autofocus=true)
